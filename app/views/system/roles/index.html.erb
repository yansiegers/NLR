<h1 class="text-xl font-bold">Roles</h1>
<%= link_to 'New role', new_system_role_path %>

<% if @roles.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Utility name</th>
        <th>Created at</th>
        <th>Updated at</th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.id %></td>
          <td><%= role.name %></td>
          <td><%= role.utility_name %></td>
          <td><%= role.created_at %></td>
          <td><%= role.updated_at %></td>
          <td>
            <%= link_to 'Edit', edit_system_role_path(role) %>
          </td>
          <td>
            <%= button_to 'Delete', [:system, role], method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
