<h1>Graphs</h1>
<%= link_to 'New graph', new_system_graph_path %>

<% if @graphs.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Property</th>
        <th>Created at</th>
        <th>Updated at</th>
      </tr>
    </thead>
    <tbody>
      <% @graphs.each do |graph| %>
        <tr>
          <td><%= graph.id %></td>
          <td><%= graph.name %></td>
          <td><%= graph.property %></td>
          <td><%= graph.created_at %></td>
          <td><%= graph.updated_at %></td>
          <td>
            <%= link_to 'Edit', edit_system_graph_path(graph) %>
          </td>
          <td>
            <%= button_to 'Delete', [:system, graph], method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
