<h1 class="text-xl font-bold">Users</h1>
<%= link_to 'New user', new_system_user_path %>

<% if @users.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Full name</th>
        <th>Email address</th>
        <th>Password</th>
        <th>Created at</th>
        <th>Updated at</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |graph| %>
        <tr>
          <td><%= graph.id %></td>
          <td><%= graph.full_name %></td>
          <td><%= graph.email_address %></td>
          <td><%= graph.password %></td>
          <td><%= graph.created_at %></td>
          <td><%= graph.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
