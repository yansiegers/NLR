<h1 class="text-xl font-bold">Workspaces</h1>
<%= link_to 'New workspace', new_system_workspace_path %>

<% if @workspaces.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>User ID</th>
        <th>Favorite</th>
        <th>Created at</th>
        <th>Updated at</th>
      </tr>
    </thead>
    <tbody>
      <% @workspaces.each do |workspace| %>
        <tr>
          <td><%= workspace.id %></td>
          <td><%= link_to workspace.name, workspace_path(workspace) %></td>
          <td>
            <% if workspace.user %>
              <%= "#{workspace.user.full_name} (#{workspace.user_id})" %>
            <% else %>
              -
            <% end %>
          </td>
          <td><%= workspace.favorite %></td>
          <td><%= workspace.created_at %></td>
          <td><%= workspace.updated_at %></td>
          <td>
            <%= link_to 'Edit', edit_system_workspace_path(workspace) %>
          </td>
          <td>
            <%= button_to 'Delete', [:system, workspace], method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
