<h1 class="text-xl font-bold">Bookmarks</h1>
<%= link_to 'New bookmark', new_bookmark_path %>

<% if @bookmarks.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>User ID</th>
        <th>Favorite</th>
        <th>Created at</th>
        <th>Updated at</th>
      </tr>
    </thead>
    <tbody>
      <% @bookmarks.each do |bookmark| %>
        <tr>
          <td><%= bookmark.id %></td>
          <td><%= bookmark.name %></td>
          <td>
            <% if bookmark.user %>
              <%= "#{bookmark.user.full_name} (#{bookmark.user_id})" %>
            <% else %>
              -
            <% end %>
          </td>
          <td><%= bookmark.favorite %></td>
          <td><%= bookmark.created_at %></td>
          <td><%= bookmark.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
