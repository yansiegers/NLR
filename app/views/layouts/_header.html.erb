<header class="p-14 flex justify-between">
  <div class="flex justify-start gap-8">
    <% @quick_workspaces.each do |quick_workspace, index| %>
      <%= link_to quick_workspace.name, workspace_path(quick_workspace), class: class_names('btn', { 'btn__secondary': !current_page?(workspace_path(quick_workspace)) }) %>
    <% end %>
    <%= link_to 'More...', workspaces_path, class: 'btn btn__secondary' if @quick_workspaces.any? %>
  </div>
  <div class="flex justify-end gap-8">
    <%= link_to dashboard_path, class: class_names('btn', { 'btn__secondary': !current_page?(dashboard_path) }) do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
      </svg>
    <% end %>
    <span class="btn btn__secondary">
      <%= @current_user.full_name %>
    </span>
  </div>
</header>
