<header class="p-14 flex justify-between">
  <div class="flex justify-start gap-8">
    <% if @graph_categories %>
      <% GraphCategory.all.each do |graph_category| %>
        <% if @graph_categories.exists?(id: graph_category.id) %>
          <span class="btn">
            <%= graph_category.name %>
          </span>
        <% else %>
          <span class="btn btn__secondary">
            <%= graph_category.name %>
          </span>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="flex justify-end gap-8">
    <% if @workspace %>
      <%= link_to edit_workspace_path(@workspace), class: 'btn btn__secondary' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
    <% end %>
    <%= link_to workspaces_path, class: class_names('btn', { 'btn__secondary': !current_page?(workspaces_path) }) do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
      </svg>
    <% end %>
    <span class="btn btn__secondary">
      <%= @current_user.full_name %>
    </span>
  </div>
</header>
