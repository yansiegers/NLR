<div class="bg-white p-14">
  <div class="flex justify-between">
    <h1><%= workspace.name %></h1>
    <div class="flex justify-end gap-2">
      <%= link_to edit_workspace_path(workspace) do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
      <%= button_to workspace, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      <% end %>
    </div>
  </div>

  <% if workspace.graph_categories.any? %>
    <ul>
      <% workspace.graph_categories.uniq.each do |graph_category| %>
        <li><%= graph_category.name %></li>
      <% end %>
    </ul>
  <% end %>
</div>
